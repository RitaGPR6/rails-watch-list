<div class="banner">
  <div class="container">
    <h3>Save any kind of movies</h3>
  </div>
</div>


<div class="container">
  <div class="container d-flex justify-content-between">
    <div class="p-3">
      <h2>My lists:</h2>
      <div class="d-flex">
        <% @lists.each do |list| %>
          <div class="card m-3" style="width: 20rem;">
            <img src="https://plus.unsplash.com/premium_photo-1710409625244-e9ed7e98f67b?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDE4fHx8ZW58MHx8fHx8" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title fs-2 text fw-bolder"><%= list.name %></h5>
              <div>
              <%= link_to "See bookmarks", list_path(list), class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
