<div class="container mt-3 bg-light p-4">
<h2>Add a new list</h2>
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add new list", class: 'btn btn-primary my-4' %>
    <%= link_to "Cancel", lists_path, class: 'btn btn-danger text-white'%>
  <% end %>
</div>
